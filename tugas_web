<script>
   const tombol = document.querySelector('section#b button');
   tombol.addEventListener('click', function () {
      alert('anda menekan tombol');
   });
     
   currentSlideId = 1;
   sliderElement = document.getElementById("slider");
   totalSlide = sliderElement.childElementCount;

   console.log(totalSlide);
   function next(){
      if(totalSlide < currentSlideId){
         currentSlideId++;
         showSlide();
      }
   }

   function prev(){

     if(currentSlideId > 2){
      currentSlideId--;
      showSlide();
     }
   }

   function showSlide(){

   }
</script>

